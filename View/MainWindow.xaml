<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="125*"/>
        </Grid.RowDefinitions>
        <Label Content="Mi libreria" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.076" Height="31" Width="790" FontFamily="Arial" FontWeight="Bold" FontSize="14"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="10,48,395,10" Grid.RowSpan="2">
            <Label Content="Registrar libro" Margin="0,0,0,345" FontWeight="Bold" FontFamily="Arial"/>
        </Border>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="19,74,0,0" VerticalAlignment="Top" Height="32" Width="386"/>
        <Label Content="Autor" HorizontalAlignment="Left" Margin="19,141,0,0" VerticalAlignment="Top" Height="32" Width="386"/>
        <TextBox x:Name="TxtNombre" HorizontalAlignment="Left" Margin="19,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="381" Height="26"/>
        <TextBox x:Name="TxtAutor" HorizontalAlignment="Left" Margin="19,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="381" Height="26" Grid.RowSpan="2"/>
        <Label Content="Categoría" HorizontalAlignment="Left" Margin="19,20,0,0" VerticalAlignment="Top" Height="32" Width="386" Grid.Row="1"/>
        <TextBox x:Name="TxtCategoria" HorizontalAlignment="Left" Margin="19,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="381" Height="26" Grid.Row="1"/>
        
        <Label Content="Descripción" HorizontalAlignment="Left" Margin="19,93,0,0" VerticalAlignment="Top" Height="32" Width="386" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="19,125,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="381" FontFamily="Arial"/>
        <TextBlock x:Name="TxtDescripción" HorizontalAlignment="Left" Margin="19,125,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="55" Width="381"/>
        <Button x:Name="BtnRegistrar" Content="Registrar" HorizontalAlignment="Left" Margin="99,211,0,0" Grid.Row="1" VerticalAlignment="Top" Height="21" Width="206" Click="BtnRegistrar_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="432,79,10,10" Grid.RowSpan="2">
            <TextBlock x:Name="TxtBooks" TextWrapping="Wrap" Margin="0,-1,0,0"/>
        </Border>
        <Label Content="Libros registrados" HorizontalAlignment="Left" Margin="432,48,0,0" VerticalAlignment="Top" Width="358" FontFamily="Arial" FontWeight="Bold" FontSize="14"/>

    </Grid>
</Window>
